<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.codragon.sclive.mapper.ConferenceMapper">

    <insert id="create" parameterType="ConCreateDao">
        INSERT INTO conference (`course_id`, `start_time`, `title`, `is_active`, `owner_email`) VALUES (#{conferenceUuid}, #{startTime}, #{title}, 0, #{ownerEmail});
    </insert>

    <update id="start" parameterType="string">
        update conference set is_active=1 where course_id = #{hello};
    </update>

    <update id="end">
        update conference set end_time=now() where course_id = #{uuid} and owner_email = #{email}
    </update>
</mapper>